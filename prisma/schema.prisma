generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./main.db"
}

model AccessGate {
  user   String @id
  permit Int
}

model ModMailStatus {
  discordId String   @id
  channel   String?
  claimed   Boolean
  openTime  DateTime @default(now())
  claimedBy String?
  closeId   String?
}

model ModMailMessage {
  discordId  String
  author     String
  sequence   Int
  link       String
  staffMsgId String
  content    String
  msgId      String
  anon       Boolean @default(false)
  name       String?
  staff      Boolean @default(false)
  hidden     Boolean @default(false)

  @@id(name: "messageSequenceId", [discordId, sequence])
}

model SubbedForMessages {
  senderId String
  claimId  String

  @@id([senderId, claimId])
}

model Snippets {
  name String @id
  val  String
}

model Categories {
  channelId String  @id
  name      String
  short     String?
}

model PendingMessages {
  discordId String @id
  content   String
}
